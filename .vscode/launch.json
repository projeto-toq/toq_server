{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TOQ Server (Development with pprof)",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/toq_server.go",
            // Build the debug binary into ./bin when launching
            "output": "${workspaceFolder}/bin/toq_server",
            "cwd": "${workspaceFolder}",
            "env": {
                "DISABLE_OTEL": "false",
                "OTLP_ENDPOINT": "localhost:4318", // HTTP endpoint instead of gRPC 4317
                "DB_HOST": "localhost",
                "DB_PORT": "3306",
                "DB_USER": "toq_user",
                "DB_PASSWORD": "toq_password",
                "DB_NAME": "toq_db",
                "PORT": "8080",
                "ENABLE_PPROF": "true",
                "PPROF_PORT": "6060",
                "LOG_LEVEL": "info",
                "LOG_ADDSOURCE": "true",
                "LOG_TOFILE": "false"
            },
            "args": [],
            "console": "internalConsole"
        }
    ]
}