    "version": "0.2.0",
    "configurations": [
        {
            "name": "TOQ Server (Development)",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/toq_server.go",
            // Build the debug binary into ./bin when launching
            "output": "${workspaceFolder}/bin/toq_server",
            "cwd": "${workspaceFolder}",
            "env": {
                "DISABLE_OTEL": "false",
                "OTLP_ENDPOINT": "localhost:4318", // HTTP endpoint instead of gRPC 4317
                "DB_HOST": "localhost",
                "DB_PORT": "3306",
                "DB_USER": "toq_user",
                "DB_PASSWORD": "toq_password",
                "DB_NAME": "toq_db",
                "PORT": "8080",
                "ENABLE_PPROF": "true",
                "PPROF_PORT": "6060",
                "ENVIRONMENT": "dev"
            },
            "args": [
                "--log-level=info",
                "--log-format=json",
                "--log-output=stdout",
                "--log-add-source=false"
            ],
            "console": "internalConsole"
        },
        {
            "name": "TOQ Server (Production Mode)",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/toq_server.go",
            "output": "${workspaceFolder}/bin/toq_server",
            "cwd": "${workspaceFolder}",
            "env": {
                "DISABLE_OTEL": "false",
                "OTLP_ENDPOINT": "localhost:4318",
                "DB_HOST": "localhost",
                "DB_PORT": "3306",
                "DB_USER": "toq_user",
                "DB_PASSWORD": "toq_password",
                "DB_NAME": "toq_db",
                "PORT": "8080",
                "ENABLE_PPROF": "true",
                "PPROF_PORT": "6060",
                "ENVIRONMENT": "homo"
            },
            "args": [
                "--log-level=info",
                "--log-format=json",
                "--log-output=stdout",
                "--log-add-source=false"
            ],
            "console": "internalConsole"
        },
        {
            "name": "TOQ Server (Debug)",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/toq_server.go",
            "output": "${workspaceFolder}/bin/toq_server",
            "cwd": "${workspaceFolder}",
            "env": {
                "DISABLE_OTEL": "false",
                "OTLP_ENDPOINT": "localhost:4318",
                "DB_HOST": "localhost",
                "DB_PORT": "3306",
                "DB_USER": "toq_user",
                "DB_PASSWORD": "toq_password",
                "DB_NAME": "toq_db",
                "PORT": "8080",
                "ENABLE_PPROF": "true",
                "PPROF_PORT": "6060",
                "ENVIRONMENT": "homo"
            },
            "args": [
                "--log-level=debug",
                "--log-format=json",
                "--log-output=stdout",
                "--log-add-source=true"
            ],
            "console": "internalConsole"
        }
    ]
}