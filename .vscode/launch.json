    "version": "0.2.0",
    "configurations": [
        {
            "name": "TOQ Server (with OpenTelemetry)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/toq_server.go",
            "cwd": "${workspaceFolder}",
            "output": "${workspaceFolder}/bin/debug_bin",
            "env": {
                "DISABLE_OTLP": "false",
                "OTLP_ENDPOINT": "localhost:4317",
                "DB_HOST": "localhost",
                "DB_PORT": "3306",
                "DB_USER": "toq_user",
                "DB_PASSWORD": "toq_password",
                "DB_NAME": "toq_db",
                "PORT": "8080"
            },
            "args": []
        }
    ]
}